<div class="container">
  <%= render 'layouts/panel_head' %>
  <center>
    <h1>Add a Medication to your Health Record</h1>
    <h3>
      <span class="label label-primary">Fill out as much information as you want.</span>
    </h3>
  </center>
  <%= bootstrap_form_for @doctor_visit do |f| %>

  <div class="form-inputs">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.text_area :notes %>
    <%= f.text_field :doctor_id %>
    <%= f.text_field :location %>
    <%= f.text_field :reason %>
    <%= f.text_field :album_id %>
  </div>
  

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>
