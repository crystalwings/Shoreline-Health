<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/sidebar" %>
    </div>
    <div class="col-md-9">
      <h2>
        <%= @user.first_name %>'s Inbox
      </h2>
      <p>
        <%= link_to user_mark_read_path(current_user), class: 'btn btn-primary' do %>
        <%= fa_icon "check" %>  Mark All As Read
        <% end %>
      </p>
      <div class="panel panel-default">
        <div class="panel-body">
          <table class='table table-striped table-hover table-responsive'>

            <tbody>
              <% @notifications.each do |notification| %>
              <% if notification.b_read %>
              <tr>
                <% else %>
              <tr class="success">
                <% end %>
                <td><%= notification.content %></td>
                <td><%= notification.created_at.strftime("%B %d, %Y") %></td>
                 
                <td><% if !notification.b_read %><%= link_to user_mark_read_path(current_user), class: 'pull-right btn btn-sm btn-default' do %>
        <%= fa_icon "check" %>  Mark As Read
                  <% end %><% end %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <br>

        </div>
      </div>
    </div>
  </div>
</div>