<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
  <h2><%= link_to "Issues", user_episodes_path(current_user) %> / <strong><%= @episode.name %></strong>
  <%= link_to new_episode_post_path(@episode), class: "btn pull-right btn-default btn-lg" do %>
    <span class="glyphicon glyphicon-plus"></span> Post
  <% end %>
</h2>
  <hr>


<% @posts.each do |post| %>
<div class="row">
  <div class="col-md-6">
        <% if post.title? %><%= post.title %><br /><% end %>
        
        <%= link_to 'View full size', episode_post_path( @episode, post) %>

          <%= link_to "Edit", edit_episode_post_path(@episode, post) %>
          <%= link_to "Delete", episode_post_path(@episode, post), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
</div>
<% end %>

