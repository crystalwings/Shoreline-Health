<%= render partial: 'layouts/profile_nav', object: @user %>
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h2><strong>Current Conditions</strong><span class="pull-right"></span>
				<button class="btn btn-default pull-right" data-toggle="modal" data-target="#myModal">
					+ New Condition
				</button>
			</h2>
		</div>
		<div class="panel-body">
			<!-- Modal -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h3 class="modal-title" id="myModalLabel">New Condition</h3>
						</div>
						<%= form_for Condition.new do |f| %>
						<div class="modal-body">
							<div>
								<%= f.label :name %><br />
								<%= f.text_field :name, autofocus: true, class:"form-control" %>
							</div>
							<div>
								<%= f.label :description %><br />
								<%= f.text_area :description, class:"form-control" %>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							<%= f.submit "Save New Condition", class: "btn btn-primary" %>
						</div>
						<% end %>
					</div>
				</div>
			</div>

			<% for condition in @conditions %>
			<div class="row">
				<div class="col-sm-2">
					<h5>
						<%= time_ago_in_words(condition.created_at) %>
					</h5>
				</div>
				<div class="col-sm-10">
					<h4>
						<strong><%= condition.name %></strong>
						<%= link_to "View full history", condition_posts_path(condition), class: "btn btn-primary pull-right" %>
					</h4>
					<p><%= condition.created_at.strftime("%B %d, %Y") %> - Present</p><br />
					<p>Last Update: </p>
				</div>
			</div>
			<hr>
			<% end %>
		</div>
	</div>

	<div class="panel panel-default">
		<div class="panel-body">
			<h1>Past Conditions</h1>
			<hr>
		</div>
	</div>
</div>
