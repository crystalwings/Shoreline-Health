<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h2>
        Tracking History of <b><%= @tracker.name %></b>
      </h2>
      <p>
        <%= link_to "Back to all trackers", user_metrics_path(@user) %>
      </p>
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-responsive table- table-hover">
            <thead>
              <tr>
                <th>AMOUNT</th>
                <th>TIME</th>
                <th>EDIT</th>
              </tr>
            </thead>
            <tbody>
              <% @tracker.datapoints.each do |f| %>
              <tr>
                <td>
                  <%= f.amount %>
                </td>
                <td>
                  <%= f.created_at.strftime("%B %d, %Y") %> at <%= f.created_at.strftime("%I:%M %P") %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_datapoint_path(f) %> | <%= link_to 'Remove', f %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>	
      </div>
    </div>
  </div>
</div>