<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/sidebar" %>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2>
            <h1><%= fa_icon "stethoscope", class: 'text-primary' %> Conditions</h1>
          </h2>
          <p>
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseForm" aria-expanded="false" aria-controls="collapseExample">
              <%= fa_icon "medkit" %>  Add Condition
            </button>
          </p>
          <div class="collapse" id="collapseForm">
            <div class="well">
              <%= render 'conditions/form' %>
            </div>
          </div>

          <%= render 'conditions/conditions' %>
        </div>
      </div>
    </div>
  </div>
</div>
