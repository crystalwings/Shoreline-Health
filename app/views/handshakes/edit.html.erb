<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/sidebar" %>
    </div>
    <div class="col-md-9">
      <%= simple_form_for(@handshake) do |f| %>
      <%= f.error_notification %>
      <%= f.select :relationship_type, relationship_type: [:Family, :Doctor, :Friend], class: 'form-control' %><br><br>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>

    </div>
  </div>
</div>