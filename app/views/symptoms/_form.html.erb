<%= bootstrap_form_for @symptom, {:multipart => true} do |f| %>

<div class="form-inputs">
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.text_area :description %>
  <p>
    <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#collapseShare" aria-expanded="false" aria-controls="collapseExample">
      <%= fa_icon "calendar" %>  Specify a date of occurence
    </button> 
    <span class="btn btn-default btn-file"><%= fa_icon 'files-o' %> Attach Files<%= file_field_tag "images[]", type: :file, multiple: true, class: '' %></span>
  <div class="collapse" id="collapseShare">
    <%= f.date_select :date_occured, start_year: 1890, end_year: 2015, add_month_numbers: true %>
  </div>
  </p>
</div>
<%= render 'layouts/form_footer' %>
<% end %>
