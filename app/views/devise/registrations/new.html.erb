<div style="position: fixed;
            top: 0px;
            left: 0; background: url(/assets/Wetlands2.jpg) no-repeat center center fixed; 
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            width: 100%;
            height: 100%;">
</div>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <center><%= image_tag "ShorelineLogoColor.png", width: 100 %><br><br>
        <h2>Sign Up For A New Account</h2>
      </center>
      <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-vertical' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :imageurl, value: "http://upload.wikimedia.org/wikipedia/commons/d/d3/User_Circle.png" %>
      <%= f.text_field :first_name, autocomplete: "off", class: "form-control" %>
      <%= f.text_field :last_name, class: "form-control" %>
      <%= f.text_field :email %>
      <%= f.date_select :date_of_birth, start_year: 1900 %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <br>
      <%= f.submit "Sign up", class: 'btn btn-lg btn-block btn-primary' %><br /> <center>
      <br>Already signed up? <%= link_to "Sign In!", new_user_session_path %><br><%= link_to "Back to Home", root_path %></center>
    </div>
    <% end %>
  </div>
</div>

