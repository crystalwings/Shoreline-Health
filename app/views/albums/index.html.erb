<div class="container">
	<div class="panel panel-default">
		<div class="panel-body">
	<h2>
		<strong>Albums</strong>
		<%= link_to new_user_album_path, {remote: true, 'data-toggle' => "modal", 'data-target' => '#modal-window'}, class: "btn pull-right btn-default btn-lg" do %>
			<span class="glyphicon glyphicon-picture"></span> New Album
		<% end %>
	</h2>
	<hr>
	<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"><div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
	<h3>New Album</h3>
</div><div class="modal-body">sadsadas</div></div>
<% @albums.each do |album| %>
  <div class="col-md-4">
    <div class="thumbnail">
    	<h3><%= album.title %></h3>
      <%= link_to album_thumbnail(album), album_pictures_path(album) %><br />
      <%= link_to "View Album", album_pictures_path(album) %>
      <% if can_edit_album?(album) %>
        | <%= link_to "Edit", edit_album_path(album) %>
        | <%= link_to "Delete", album_path(album), method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </div>
  </div>
<% end %>

