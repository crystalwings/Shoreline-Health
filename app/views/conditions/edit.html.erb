<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/sidebar" %>
    </div>
    <div class="col-md-9">
      <h1>Editing Condition</h1>

      <%= simple_form_for(@condition) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :created_at %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>

      <%= link_to 'Back', user_conditions_path(current_user) %>
    </div>
  </div>
</div>