<%= simple_form_for(@handshake) do |f| %>
<%= f.error_notification %>
<%= @handshake.followed.full_name %> is a...
<div class="form-group">
  <%= f.select(:relationship_name, options_for_select([['Friend'], ['Family Member'], ['Doctor'], ['Patient'], ['Nurse'], ['Caregiver'],['Specialist']]), {}, {class: "form-control"})  %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
</div>
<% end %>
<%= link_to 'Cancel and go back to network', user_network_path(current_user) %>