<%= simple_form_for(@blood_pressure) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :author_id %>
    <%= f.input :systolic %>
    <%= f.input :diastolic %>
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
